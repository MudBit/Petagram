<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragments.MascotaDetalleFragment">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/cImagePet"
        android:layout_width="@dimen/width_circuler"
        android:layout_height="@dimen/width_circuler"
        android:src="@drawable/dog2"
        app:civ_border_color="@color/colorAccent"
        app:civ_border_width="@dimen/width_border_circuler"
        app:civ_shadow="true"
        app:civ_shadow_color="@color/shadow_circuler"
        app:civ_shadow_radius="@dimen/radius_circuler"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/tvMascotaNameDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cImagePet"
        android:layout_centerHorizontal="true"
        android:text="@string/app_name"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMascotaDetalle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvMascotaNameDetail"
        />

</RelativeLayout>
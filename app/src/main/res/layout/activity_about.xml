<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutActivity">

    <include android:id="@+id/actionBarAbout"
        layout="@layout/action_bar"/>

    <TextView
        android:id="@+id/tvDeveloperName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_developer_name"
        android:textStyle="bold"
        android:theme="@style/title"
        android:paddingTop="?attr/actionBarSize"
        android:layout_marginTop="@dimen/margin_top_constrain"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/actionBarAbout"/>

    <TextView
        android:id="@+id/tvDeveloperBio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_developer_bio"
        android:theme="@style/content"
        android:layout_marginTop="@dimen/margin_top_constrain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDeveloperName"/>

</androidx.constraintlayout.widget.ConstraintLayout>